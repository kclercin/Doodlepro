<p id="notice"><%= notice %></p>

<div>
  <%= link_to 'New Doodle', new_doodle_path, class: 'btn btn-sm btn-success' %>
</div>
<br>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Creator</th>
      <th>Created at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doodles.each do |doodle| %>
      <tr>
        <td><%= doodle.name %></td>
        <td><%= doodle.location %></td>
        <td><%= doodle.creator %></td>
        <td><%= doodle.created_at %></td>
        <td><%= link_to 'Show', doodle_path(doodle.token), class: 'btn btn-sm btn-primary' %></td>
        <td><%= link_to 'Edit', edit_doodle_path(doodle.token), class: 'btn btn-sm btn-warning' %></td>
        <td><%= link_to 'Destroy', doodle_path(doodle.token), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

